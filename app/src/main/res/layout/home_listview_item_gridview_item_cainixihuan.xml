<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <!--双标题模板-->
    <FrameLayout
        android:id="@+id/guozi_rlBigVodnew"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="9dp"
        android:background="@color/blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guozi_ivPic2"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:scaleType="fitXY" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
               android:layout_gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/guozi_ivPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/classify_type"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/homepage_topleft_tab"
                        android:text="话题"
                        android:paddingLeft="@dimen/homepage_imagetop_textviewpaddingleft"
                        android:paddingRight="@dimen/homepage_imagetop_textviewpaddingright"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/homepage_topleft_tabtextsize"
                        android:visibility="gone" />
                    <!--android:paddingRight="4dp"
                    android:paddingLeft="4dp"-->
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guozi_tvUpdateTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/home_viewflow_text_bg"
                    android:gravity="left"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/homepage_fontinimage_marginleft"
                    android:paddingRight="@dimen/homepage_fontinimage_marginleft"
                    android:textColor="@color/white"
                    android:textSize="@dimen/homepage_title_two" />
                <!--  android:paddingRight="5dp"-->
            </LinearLayout>

            <TextView
                android:id="@+id/guozi_tvlabel"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="投票"
                android:paddingLeft="@dimen/homepage_imagetop_textviewpaddingleft"
                android:paddingRight="@dimen/homepage_imagetop_textviewpaddingright"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/homepage_topleft_tabtextsize"
                android:visibility="gone" />
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/guozi_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="主标题"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/guozi_label_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="副标题"
        android:textColor="#666666"
        android:textSize="13sp"
        android:visibility="gone" />


</LinearLayout>
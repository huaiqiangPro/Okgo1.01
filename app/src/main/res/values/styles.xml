<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="refresh_loading">
        <item name="android:indeterminateDrawable">@drawable/refresh_loading_animation</item>
        <item name="android:indeterminate">false</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
    <style name="loading_progressbar_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@anim/base_loading_large_anim</item>
    </style>
    <style name="Item"/>
    <style name="Item.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_item_title</item>
    </style>

    <style name="Item.Title.Subtitle">
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">@dimen/size_item_subtitle</item>
    </style>


    <style name="Item.Intro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_item_intro</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

    <style name="Item.Intro.Long">
        <!--<item name="android:minLines">5</item>-->
        <item name="android:maxLines">5</item>
    </style>

    <style name="Item.Intro.Short">
        <!--<item name="android:minLines">3</item>-->
        <item name="android:maxLines">3</item>
    </style>

    <style name="CommonDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/gray1</item>
    </style>
</resources>
